<!DOCTYPE html>
<html lang="en">
    <head>
        <title>{% block title %}Homepage!{% endblock %}</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">

        {% block stylesheet %}
            <link href="http://necolas.github.io/normalize.css/2.1.2/normalize.css" rel="stylesheet" media="screen">
            <link href="/public/stylesheets/core/bootstrap/bootstrap.min.css" rel="stylesheet" media="screen">
            <link href="/public/stylesheets/core/screen.css" rel="stylesheet" media="screen">

            <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
            <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
            <!--[if lt IE 9]>
              <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
              <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
            <![endif]-->

        {% endblock %}
    </head>
    <body>
        <div id="wrapper">
            <div class="container">
                <ul>
                </ul>

                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    Hey {{ user.getUsername }}
                    <a tabindex="-1" href="{{ path('logout')}}">Log out</a>
                {% else %}
                    <a href="{{ path('login') }}">Login</a>
                {% endif %}

                {% block body %}
                {% endblock %}
            </div>
        </div>
    </body>

    {# Javascript - core #}
    {% block javascript %}
        <script src="http://code.jquery.com/jquery.js"></script>
        <script src="/public/js/bootstrap/bootstrap.min.js"></script>
        <script src="/public/js/core.js"></script>
    {% endblock %}
</html>
